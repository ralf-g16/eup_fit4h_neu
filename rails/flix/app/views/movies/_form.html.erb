<%= form_for(@movie) do |f| %>

<% if (@movie.errors.any?) %>
<div class="panel">
  <ul>
    <% @movie.errors.full_messages.each do |message| %>
    <li><%= message %> </li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row">
  <div class="large-5 columns"><%= f.label :title %></div>
  <div class="large-1 columns"><!-- ... --></div>
  <div class="large-4 columns"><%= f.text_field :title %></div>
</div>
<div class="row">
  <div class="large-5 columns"><%= f.label :rating %></div>
  <div class="large-1 columns"><!-- ... --></div>
  <div class="large-4 columns"><%= f.text_field :rating%></div>
</div>
<div class="row">
  <div class="large-5 columns"><%= f.label :total_gross %></div>
  <div class="large-1 columns"><!-- ... --></div>
  <div class="large-4 columns"><%= f.number_field :total_gross %></div>
</div>
<div class="row">
  <div class="large-5 columns"><%= f.label :release %></div>
  <div class="large-1 columns"><!-- ... --></div>
  <div class="large-4 columns"><%= f.datetime_select :release %></div>
</div>
<div class="row">
  <div class="large-5 columns"><%= f.label :descrption %></div>
  <div class="large-1 columns"><!-- ... --></div>
  <div class="large-4 columns"><%= f.text_area :descrption %></div>
</div>
<div>
 <%= f.submit %>
</div>



<% end %>
