<h1>Books</h1>
<h2><%="listing generates at: #{Time.now} "%> </h2>
<p><%= link_to "neues Buch hinzufÃ¼gen", new_book_path %></p>

<table width="100%">
	<tr>
		<th>Titel</th>
		<th>Autor</th>
		<th>Preis</th>
		<th>Erscheinungsjahr</th>
		<th>Beschreibng</th>
		<th>Show</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.titel %></td>
		<td><%= book.autor %></td>
		<td><#%= format_price(book) %></td>
		<td><%= book.erscheinungsjahr %></td>
		<td><%= truncate(book.beschreibung, lenght: 25, seperator: '') %></td>
		<td><%= link_to "Show", book_path(book.id) %></td>
		<td><%= link_to "Edit", edit_book_path(book.id) %></td>
		<td><%= link_to "Delete", book_path(book.id), method: :delete, data: {confirm:"Sicher?"} %></td>
	</tr>
	<% end %>
</table>
