<table width="100%">
	<tr>
		<th>Name</th>
		<th>Ort</th>
		<th>Preis</th>
		<th>Wann</th>
		<th>Beschreibng</th>
		<th>Show</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>	
	<% @events.each do |event| %>
	<tr>
		<td><%= event.name %></td>
		<td><%= event.location %></td>
		<td><%= format_price(event) %></td>
		<td><%= event.start_at %></td>
		<td><%= truncate(event.descrption, lenght: 25, seperator: '') %></td>
		<td><%= link_to "Show", event_path(event.id) %></td>
		<td><%= link_to "Edit", edit_event_path(event.id) %></td>
		<td><%= link_to "Delete", event_path(event.id), method: :delete, data: {confirm:"Sicher?"} %></td>
	</tr>
	<% end %>
</table>